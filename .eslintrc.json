{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@angular-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json" // Specify your tsconfig file path
  },
  "rules": {
    "camelcase": [
      "error",
      { "properties": "never" }
    ],
    "no-unused-vars": "off",
    "no-console": "off",
    "indent": "off",
    "comma-spacing": "off",
    "key-spacing": "off"
  },
  "ignorePatterns": ["*.spec.ts", "*.spec.js"], // Ignore all spec files
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "rules": {
        // Disable specific rules if needed (optional)
        "camelcase": "off",
        "no-unused-vars": "off",
        "no-console": "off",
        "indent": "off",
        "comma-spacing": "off",
        "key-spacing": "off"
      }
    }
  ]
}
